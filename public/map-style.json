{
  "version": 8,
  "name": "Strumble Light",
  "metadata": {
    "maputnik:renderer": "mbgljs"
  },
  "sources": {
    "protomaps": {
      "type": "vector",
      "url": "pmtiles://http://localhost:8080/europe.pmtiles",
      "attribution": "<a href=\"https://protomaps.com\">Protomaps</a> Â© <a href=\"https://openstreetmap.org\">OpenStreetMap</a>"
    }
  },
  "glyphs": "https://protomaps.github.io/basemaps-assets/fonts/{fontstack}/{range}.pbf",
  "sprite": "https://protomaps.github.io/basemaps-assets/sprites/v3/light",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "earth",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "earth",
      "paint": {
        "fill-color": "#e8e8e8"
      }
    },
    {
      "id": "landuse_park",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "filter": ["in", "pmap:kind", "park", "cemetery", "protected_area", "nature_reserve"],
      "paint": {
        "fill-color": "#d4edda"
      }
    },
    {
      "id": "landuse_hospital",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "filter": ["==", "pmap:kind", "hospital"],
      "paint": {
        "fill-color": "#f8d7da"
      }
    },
    {
      "id": "landuse_industrial",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "filter": ["==", "pmap:kind", "industrial"],
      "paint": {
        "fill-color": "#e2e3e5"
      }
    },
    {
      "id": "landuse_school",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "filter": ["==", "pmap:kind", "school"],
      "paint": {
        "fill-color": "#fff3cd"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "water",
      "paint": {
        "fill-color": "#aad3df"
      }
    },
    {
      "id": "natural_wood",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "natural",
      "filter": ["in", "pmap:kind", "wood", "forest"],
      "paint": {
        "fill-color": "#c7e6be",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "buildings",
      "minzoom": 14,
      "paint": {
        "fill-color": "#d9d9d9",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "roads_minor",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["in", "pmap:kind", "minor_road", "other"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2
      }
    },
    {
      "id": "roads_major",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["in", "pmap:kind", "major_road", "medium_road"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 3
      }
    },
    {
      "id": "roads_highway",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["==", "pmap:kind", "highway"],
      "paint": {
        "line-color": "#ffc107",
        "line-width": 4
      }
    },
    {
      "id": "boundaries_country",
      "type": "line",
      "source": "protomaps",
      "source-layer": "boundaries",
      "filter": ["==", "pmap:kind", "country"],
      "paint": {
        "line-color": "#6c757d",
        "line-width": 1,
        "line-dasharray": [3, 2]
      }
    },
    {
      "id": "water_labels",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "water",
      "minzoom": 12,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#4a6fa5",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place_labels_city",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "places",
      "filter": ["==", "pmap:kind", "city"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Bold"],
        "text-size": 14,
        "text-anchor": "bottom",
        "text-offset": [0, -0.5]
      },
      "paint": {
        "text-color": "#212529",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place_labels_town",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "places",
      "filter": ["in", "pmap:kind", "town", "village"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": 12,
        "text-anchor": "bottom"
      },
      "paint": {
        "text-color": "#495057",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "country_labels",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "places",
      "filter": ["==", "pmap:kind", "country"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Bold"],
        "text-size": 16,
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1
      },
      "paint": {
        "text-color": "#6c757d",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}
